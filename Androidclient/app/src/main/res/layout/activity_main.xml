<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_welcomeuser"
        android:layout_width="380dp"
        android:layout_height="49dp"
        android:text="VÃ¤lkommen [NAMN]"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/textView_DateToday"
        android:layout_width="273dp"
        android:layout_height="92dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="44dp"
        android:text="4:e November"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_DateTitle" />

    <TextView
        android:id="@+id/textView_DateTitle"
        android:layout_width="134dp"
        android:layout_height="36dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="2dp"
        android:text="@string/submit_dateTitleSV"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_DateToday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="198dp"
        android:layout_height="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="36dp"
        android:onClick="onSubmit"
        android:text="@string/submit_submitButtonSV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_datepicker1"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="68dp"
        android:checked="false"
        android:clickable="true"
        android:text="DD:e MMM"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/button_submit"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_datepicker2"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_datepicker2"
        android:layout_width="109dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="68dp"
        android:checked="false"
        android:clickable="true"
        android:text="DD:e MMM"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/button_submit"
        app:layout_constraintStart_toEndOf="@+id/checkBox_datepicker1" />

    <CheckBox
        android:id="@+id/checkBox_datepicker3"
        android:layout_width="109dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="68dp"
        android:checked="false"
        android:clickable="true"
        android:text="DD:e MMM"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/button_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/checkBox_datepicker2" />

    <Spinner
        android:id="@+id/spinner_reason"
        android:layout_width="352dp"
        android:layout_height="49dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_datepicker1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_DateToday"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>